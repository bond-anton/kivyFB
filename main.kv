#:include front_panel_view.kv
#:include status_bar.kv


<DisplayBox>:
    name: 'Main Window'
    orientation: 'vertical'
    size: 1, 1

    MDToolbar:
        title: 'VERBA REMOTE MAPPING'
        md_bg_color: app.theme_cls.primary_color
        #left_action_items: [['menu', lambda x : x]]
        right_action_items:
            [
            ['lan-connect', lambda x : app.set_screen('connection_screen')],
            ['cogs', lambda x : app.set_screen('process_screen')]
            ]

    FrontPanelView:
        id: front_panel_view

    MDToolbar:
        id: status_bar
        height: 32
        title: 'date and time...'
        md_bg_color: app.theme_cls.primary_light
        MDProgressBar:
            id: progress_lower
            min: 0
            max: 100
            value: 10
            color: 1.0, 0., 0., 1

